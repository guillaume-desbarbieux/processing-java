int[] board = { 7, 2, 9, 10, 1, -4 };

void setup() {
  print("La moyenne des Ã©lÃ©ments de ce tableau vaut ");
  print(getMean (board));
}

int getSum (int[] tableau) {
  int sum = tableau[0];
  for (int i=1 ; i<tableau.length ; i++) {
      sum=sum+tableau[i];
    }
  return sum;
}

float getMean (int[] tableau) {
  return(float(getSum(tableau)) / float(tableau.length));
}
